<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Properties>
        <Property name="log-path">logs</Property>
        <Property name="archive">${log-path}/archive</Property>
    </Properties>
    <Appenders>
        <Console name="Console-Appender" target="SYSTEM_OUT">
            <PatternLayout>
                <pattern>
                    [%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n
                </pattern>
            </PatternLayout>
        </Console>

        <File name="File-Appender-Event-Error" fileName="${log-path}/event-error.json">
            <JsonLayout complete="true" compact="false"/>
        </File>
        <File name="File-Appender-Event-Debug" fileName="${log-path}/event-debug.json">
            <JsonLayout complete="true" compact="false"/>
        </File>
        <RollingFile name="RollingFileAppender-Event-Info" fileName="logs/event-info.json"
                     filePattern="logs/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.gz">
            <JsonLayout complete="true" compact="false"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="6" modulate="true"/>
                <SizeBasedTriggeringPolicy size="1 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="20" />
        </RollingFile>


    </Appenders>
    <Loggers>
        <Logger name="org.ants.opportunity.event" level="ALL">
            <AppenderRef ref="File-Appender-Event-Error" level="ERROR"/>
            <AppenderRef ref="File-Appender-Event-Debug" level="DEBUG"/>
            <AppenderRef ref="RollingFileAppender-Event-Info" level="INFO"/>
        </Logger>
        <Root level="INFO">
            <AppenderRef ref="Console-Appender"/>
        </Root>
    </Loggers>
</Configuration>
